{
  "manifest_version": 3,
  "name": "Confluence Side TOC",
  "version": "0.0.1",
  "description": "A side table of contents for Confluence.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["/assets/stoc-init.js"],
      "css": ["/assets/stoc-init.css"],
      "matches": ["https://*/*"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["/index.js", "/index.css", "/logo.png"],
      "matches": ["https://*/*"]
    }
  ]
}
